class Solution {
    public boolean detectCapitalUse(String word) {
        if(word.toUpperCase().equals(word))
		{
			return true;
		}
		else if((word.substring(0, 1).toUpperCase()+word.substring(1, word.length()).toLowerCase()).equals(word))
				
		{
			return true;
		}
		else if(word.toLowerCase().equals(word))
		{
			return true;
		}
		else
			return false;
    }
}
